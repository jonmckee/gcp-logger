{
  "name": "@jonmckee/next-logger",
  "version": "3.0.0",
  "author": "Jon McKee",
  "description": "Winston logger for Next which adds a correlation-id",
  "main": "lib/index.js",
  "type": "module",
  "license": "ISC",
  "engines": {
    "node": "^18"
  },
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "coverage": "NODE_OPTIONS=--experimental-vm-modules npx jest --coverage"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "5.3.0",
    "correlation-id": "5.0.0",
    "winston": "3.8.2"
  },
  "devDependencies": {
    "jest": "29.5.0",
    "typescript": "4.9.5"
  },
  "peerDependencies": {
    "next": "^13"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
